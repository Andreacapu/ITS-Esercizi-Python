            let numeroestratto = Math.floor(Math.random()*100)+1;

            let verifica = () => {
                let valoreins = document.getElementById("valore inserito").value;
                if(numeroestratto === valoreins){
                    console.log("HAI VINTO");
                ]else{
                    console.log("HAI PERSO")
                }
            }
